<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <display-name>java-security-usage</display-name>

    <filter>
        <filter-name>TokenFilter</filter-name>
        <filter-class>com.sap.cloud.security.javasec.samples.usage.TokenFilter</filter-class>
        <init-param>
            <param-name>configuration-class</param-name>
            <param-value>com.sap.cloud.security.javasec.samples.usage.TestConfiguration</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>TokenFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>